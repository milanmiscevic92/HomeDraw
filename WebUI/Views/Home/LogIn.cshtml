@model WebUI.Models.LogInViewModel

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeDraw - Log In</title>
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/JapanBackground.jpg');">

    <div class="text-center text-white d-flex h-100">
        <div class="container justify-content-center align-self-center">

            <div class="col-md-6 mx-auto mt-5">
                @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card text-white blurred cardBorderCustom">
                        <div class="card-header cardHeaderCustom">
                            <h5 class="lead text-white" style="font-size:x-large">Home Draw - Log In</h5>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <div class="row">
                                    <div class="col text-left">
                                        <label>Username</label>
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control textBoxCustom" })
                                    </div>

                                </div>

                                <div class="row mt-3">
                                    <div class="col text-left">
                                        <label>Password</label>
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control textBoxCustom" })
                                    </div>
                                </div>

                            </div>
                            <div class="mt-4">
                                <button type="submit" class="btn btn-block btn-outline-info navButtonsNormal">Log In</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>






</body>
</html>

